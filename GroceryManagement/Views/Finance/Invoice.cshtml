@model GroceryManagement.Models.FinanceInvoiceDetailVM
@{
    Layout = null;
    var title = $"Invoice - {Model.InvoiceType}";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@title</title>
    <style>
        body { font-family: Arial, Helvetica, sans-serif; }
        .container { width: 700px; margin: 0 auto; }
        .header { text-align: center; }
        .items { margin-top: 20px; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Invoice</h1>
            <p>Invoice Type: @Model.InvoiceType</p>
        </div>
        <div class="items">
            @if (Model.InvoiceType == "Procurement" && Model.Procurement != null)
            {
                <p>Procurement Id: @Model.Procurement.Id</p>
                <p>Supplier: @Model.Procurement.SupplierId</p>
                <p>Date: @Model.Procurement.ProcurementDateTime</p>
                <p>Status: @Model.Procurement.Status</p>
                <p>Total Price: @Model.Procurement.TotalPrice</p>
            }
            else if (Model.Checkout != null)
            {
                <p>Order Id: @Model.Checkout.Id</p>
                <p>Customer: @Model.Checkout.CustomerId</p>
                <p>Date: @Model.Checkout.Date</p>
                <p>Status: @Model.Checkout.Status</p>
                <p>Total: @Model.Checkout.Total</p>
            }
        </div>
    </div>
    <script>window.print();</script>
</body>
</html>
