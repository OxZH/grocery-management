@model SupplierTag

@{
    ViewBag.Title = "Suppliers | Tags";
    IEnumerable<SupplierTag> tags = ViewBag.SupplierTags;
}

<form method="post" class="form">
    <div asp-validation-summary="ModelOnly"></div>

    <label asp-for="Name"></label>
    <input asp-for="Name" autofocus>
    <span asp-validation-for="Name"></span>

    <section>
        <button>Insert</button>
        <button type="reset">Reset</button>
    </section>
</form>

<p>@tags.Count() record(s)</p>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th></th>
    </tr>
    @foreach (var t in tags)
    {
        <tr>
            <td>@t.Id</td>
            <td>@t.Name</td>
            <td>
                <button data-post="/Supplier/DeleteTag/@t.Id">Delete</button>
            </td>
        </tr>
    }
</table>
