@model SupplierVM

@{
    ViewBag.Title = "Suppliers | Update";
	ViewBag.SupplierTypes = new List<string> { "Distributor", "Wholesale", "White-Label" };
}

<form method="post" class="form">
    <div asp-validation-summary="ModelOnly"></div>

    <label asp-for="Id"></label>
    <b>@Model?.Id</b>
    <br>

    <label asp-for="Name"></label>
    <input asp-for="Name" value="@Model?.Name" data-trim>
    <span asp-validation-for="Name"></span>

    <label asp-for="SupplierType">Supplier Type</label>
    <select asp-for="SupplierType"
            class="form-select">
        <option value="">-- Select a category --</option>
        @foreach (var type in ViewBag.SupplierTypes)
        {
            if (type == Model?.SupplierType)
            {
                <option value="@type" selected>@type</option>
            }
            else
            {
                <option value="@type">@type</option>
            }
        }
    </select>
    <span asp-validation-for="SupplierType"></span>

    <label asp-for="Address"></label>
    <input asp-for="Address" value="@Model?.Address">
    <span asp-validation-for="Address"></span>

    <label asp-for="ContactNo">Contact Number</label>
    <input asp-for="ContactNo" value="@Model?.ContactNo">
    <span asp-validation-for="ContactNo"></span>

    <section>
        <button>Submit</button>
        <button type="reset">Reset</button>
    </section>
</form>

@section foot {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
}
