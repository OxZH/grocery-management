@inject DB db

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @* <link rel="shortcut icon" href="/images/favicon.png"> *@
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
    <link rel="stylesheet" href="/css/pager.css">
    <link rel="stylesheet" href="/css/app.css" asp-append-version="true">
    @RenderSection("head", false)
</head>
<body>
    <div class="info">@Html.Raw(TempData["Info"])</div>

    <header>
        <h1><a href="/">Email and DateTime</a></h1>

        @if (User.Identity!.IsAuthenticated)
        {
            <div>
                @User.Identity.Name |
                @(User.IsInRole("Manager")  ? "Manager"  : "")
                @(User.IsInRole("Staff") ? "Staff" : "")
            </div>
        }

        @if (User.IsInRole("Staff"))
        {
            var staff = db.Staffs.FirstOrDefault(s => s.Email == User.Identity!.Name);
            if (staff != null)
            {
                <img src="/photos/@staff.PhotoURL">
                
            }
        }
    </header>

    <nav>
        @if (!User.Identity!.IsAuthenticated)
        {
            <a href="/Account/Login">Login</a>
            <a href="/Account/ResetPassword">Forgot Password</a>
        }
        else
        {
            <a href="/">Product</a>
            <a href="/User/Index">Staff List</a>
            <a href="/Attendance/CheckInAttendance">Attendance</a>
            
            <a href="/Account/UpdatePassword">Update Password</a>
            @if (User.IsInRole("Staff"))
            {
                <a href="/Account/UpdateProfile">Update Profile</a>
			}
            <a href="/Account/Logout">Logout</a>

            @if (User.IsInRole("Manager"))
            {
                <a href="/Account/Register">Register Staff</a>
            }

        }
        
    </nav>

    <main>
        <h1>@ViewBag.Title</h1>
        @RenderBody()
    </main>

    <footer>
        Developed by <b>BAE SUZY</b> &middot;
        Copyrighted &copy; @DateTime.Today.Year
    </footer>

    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="/js/app.js" asp-append-version="true"></script>
    @RenderSection("foot", false)
	@RenderSection("Scripts", required: false)
</body>
</html>
