@model DayManagementVM
@{
    ViewData["Title"] = "Day Management";
}

<h1>Manage Schedule for @Model.Date.ToString("dddd, MMMM dd, yyyy")</h1>

@Html.Raw(TempData["Info"])

<!-- Tab Navigation -->
<div class="tabs">
    @if (Model.HasSchedule)
    {
        <button class="tab-button active" onclick="openTab(event, 'scheduleDetails')">View/Edit Schedule</button>
    }
    else
    {
        <button class="tab-button active" onclick="openTab(event, 'applyTemplate')">Apply Roster Template</button>
    }
    <button class="tab-button" onclick="openTab(event, 'attendanceList')">Staff Attendance List</button>
</div>

<!-- Tab: Schedule Details (if schedule exists) -->
@if (Model.HasSchedule)
{
    <div id="scheduleDetails" class="tab-content">
        <h2>Schedule Already Applied</h2>
        <p>This day already has a schedule. You can view and edit the schedule details.</p>
        
        <div>
            <a href="@Url.Action("DayDetails", new { dateStr = Model.Date.ToString("yyyy-MM-dd") })">
                <button type="button">View/Edit Schedule Details</button>
            </a>
            <a href="@Url.Action("Calendar", new { year = Model.Date.Year, month = Model.Date.Month })">
                <button type="button">Back to Calendar</button>
            </a>
        </div>
    </div>
}

<!-- Tab: Apply Template (if no schedule) -->
@if (!Model.HasSchedule)
{
    <div id="applyTemplate" class="tab-content">
        <h2>Apply Roster Template</h2>
        
        @if (!Model.Templates.Any())
        {
            <p>No roster templates available. <a href="@Url.Action("Templates")">Create one first</a>.</p>
        }
        else
        {
            <form method="post" asp-action="ApplyTemplate">
                @Html.AntiForgeryToken()
                <input type="hidden" name="Date" value="@Model.Date.ToString("yyyy-MM-dd")" />
                
                <div>
                    <label><strong>Select Template:</strong></label>
                    <select name="SelectedTemplateId" required>
                        <option value="">-- Select a roster template --</option>
                        @foreach (var template in Model.Templates)
                        {
                            <option value="@template.Id">
                                @template.TemplateName (@template.Allocations.Count staff)
                            </option>
                        }
                    </select>
                </div>
                
                <div>
                    <button type="submit">Apply Template</button>
                    <a href="@Url.Action("Calendar", new { year = Model.Date.Year, month = Model.Date.Month })">
                        <button type="button">Back to Calendar</button>
                    </a>
                </div>
            </form>
            
            <h3>Available Templates</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Template Name</th>
                        <th>Staff Count</th>
                        <th>Tasks</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var template in Model.Templates)
                    {
                        <tr>
                            <td><strong>@template.TemplateName</strong></td>
                            <td>@template.Allocations.Count staff members</td>
                            <td>
                                @foreach (var alloc in template.Allocations.Take(3))
                                {
                                    <span>@alloc.TaskName</span>
                                    @if (alloc != template.Allocations.Take(3).Last())
                                    {
                                        <text>, </text>
                                    }
                                }
                                @if (template.Allocations.Count > 3)
                                {
                                    <span>... +@(template.Allocations.Count - 3) more</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
}

<!-- Tab: Attendance List -->
<div id="attendanceList" class="tab-content" style="display:none;">
    <h2>Staff Attendance for @Model.Date.ToString("yyyy-MM-dd")</h2>
    
    @if (!Model.StaffList.Any())
    {
        <p>No staff members found.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Photo</th>
                    <th>Staff ID</th>
                    <th>Name</th>
                    <th>Attendance Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var staff in Model.StaffList)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(staff.PhotoURL))
                            {
                                <img src="/images/users/@staff.PhotoURL" class="staff-photo" alt="@staff.StaffName" />
                            }
                            else
                            {
                                <div class="staff-photo-placeholder">üë§</div>
                            }
                        </td>
                        <td><strong>@staff.StaffId</strong></td>
                        <td>@staff.StaffName</td>
                        <td>
                            <span class="badge badge-@staff.AttendanceStatus.ToLower()">
                                @staff.AttendanceStatus
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
        <div class="legend-box">
            <strong>Legend:</strong>
            <span class="legend-attend">‚óè  ATTEND</span>
            <span class="legend-absent">‚óè ABSENT</span>
            <span class="legend-leave">‚óè LEAVE</span>
            <span class="legend-unknown">‚óè UNKNOWN</span>
        </div>
    }
    
    <div>
        <a href="@Url.Action("Calendar", new { year = Model.Date.Year, month = Model.Date.Month })">
            <button type="button">Back to Calendar</button>
        </a>
    </div>
</div>

<script>
    function openTab(evt, tabName) {
        // Hide all tab contents
        var tabContents = document.getElementsByClassName("tab-content");
        for (var i = 0; i < tabContents.length; i++) {
            tabContents[i].style.display = "none";
        }
        
        // Remove active class from all buttons
        var tabButtons = document.getElementsByClassName("tab-button");
        for (var i = 0; i < tabButtons.length; i++) {
            tabButtons[i].className = tabButtons[i].className.replace(" active", "");
        }
        
        // Show current tab and mark button as active
        document.getElementById(tabName).style.display = "block";
        evt.currentTarget.className += " active";
    }
</script>
