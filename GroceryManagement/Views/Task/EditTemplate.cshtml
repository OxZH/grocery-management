@model RosterTemplateFormVM
@{
    ViewData["Title"] = "Edit Roster Template";
}

@Html.Raw(TempData["Info"])

<form method="post" asp-action="EditTemplate">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    
    <div>
        <label asp-for="TemplateName"><strong>Template Name:</strong></label>
        <input asp-for="TemplateName" />
        <span asp-validation-for="TemplateName"></span>
    </div>

    <h3>Staff-Task Assignments</h3>
    <p>Modify staff members and their tasks. Each staff can only be assigned once.</p>

    <table class="table">
        <thead>
            <tr>
                <th>Staff Member</th>
                <th>Task Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="allocations-container">
            @for (int i = 0; i < Model.Allocations.Count; i++)
            {
                <tr id="allocation-@i">
                    <td>
                        <select name="Allocations[@i].StaffId" required>
                            <option value="">-- Select Staff --</option>
                            @foreach (var item in ViewBag.Staffs as SelectList)
                            {
                                if (item.Value == Model.Allocations[i].StaffId)
                                {
                                    <option value="@item.Value" selected>@item.Text</option>
                                }
                                else
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                    </td>
                    <td>
                        <select name="Allocations[@i].TaskName" required>
                            <option value="">-- Select Task --</option>
                            @foreach (var taskType in ViewBag.TaskTypes as SelectList)
                            {
                                if (taskType.Text == Model.Allocations[i].TaskName)
                                {
                                    <option value="@taskType.Text" selected>@taskType.Text</option>
                                }
                                else
                                {
                                    <option value="@taskType.Text">@taskType.Text</option>
                                }
                            }
                        </select>
                    </td>
                    <td>
                        <button type="button" onclick="removeAllocation(@i)">Remove</button>
                    </td>
                    <input type="hidden" name="Allocations[@i].Id" value="@Model.Allocations[i].Id" />
                    <input type="hidden" name="Allocations[@i].SortOrder" value="@i" />
                </tr>
            }
        </tbody>
    </table>

    <button type="button" onclick="addAllocation()">+ Add Staff</button>

    <div>
        <button type="submit">Update Template</button>
        <a href="@Url.Action("Templates")">Cancel</a>
    </div>
</form>

<script>
    let allocationIndex = @Model.Allocations.Count;
    
    function addAllocation() {
        const container = document.getElementById('allocations-container');
        const index = allocationIndex++;
        
        const html = `
            <tr id="allocation-${index}">
                <td>
                    <select name="Allocations[${index}].StaffId" required>
                        <option value="">-- Select Staff --</option>
                        @foreach (var item in ViewBag.Staffs as SelectList)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </td>
                <td>
                    <select name="Allocations[${index}].TaskName" required>
                        <option value="">-- Select Task --</option>
                        @foreach (var taskType in ViewBag.TaskTypes as SelectList)
                        {
                            <option value="@taskType.Text">@taskType.Text</option>
                        }
                    </select>
                </td>
                <td>
                    <button type="button" onclick="removeAllocation(${index})">Remove</button>
                </td>
                <input type="hidden" name="Allocations[${index}].SortOrder" value="${index}" />
            </tr>
        `;
        
        container.insertAdjacentHTML('beforeend', html);
    }
    
    function removeAllocation(index) {
        const element = document.getElementById(`allocation-${index}`);
        if (element) {
            element.remove();
        }
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
