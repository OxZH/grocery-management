@model RosterTemplateFormVM
@{
    ViewData["Title"] = "Edit Roster Template";
}

<h1>Edit Roster Template</h1>

@Html.Raw(TempData["Info"])

<form method="post" asp-action="EditTemplate">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group">
        <label asp-for="TemplateName">Template Name:</label>
        <input asp-for="TemplateName" class="form-control" />
        <span asp-validation-for="TemplateName" class="text-danger"></span>
    </div>

    <h3>Staff-Task Assignments</h3>
    <p style="color: #666;">Modify staff members and their tasks. Each staff can only be assigned once.</p>

    <div id="allocations-container">
        @for (int i = 0; i < Model.Allocations.Count; i++)
        {
            <div class="allocation-row" id="allocation-@i" style="border: 1px solid #ddd; padding: 15px; margin-bottom: 10px; border-radius: 4px; background-color: #f9f9f9;">
                <div class="row">
                    <div class="col-md-5">
                        <label>Staff Member:</label>
                        <select name="Allocations[@i].StaffId" class="form-control" required>
                            <option value="">-- Select Staff --</option>
                            @foreach (var item in ViewBag.Staffs as SelectList)
                            {
                                <option value="@item.Value" selected="@(item.Value == Model.Allocations[i].StaffId ? "selected" : null)">@item.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-5">
                        <label>Task Name:</label>
                        <select name="Allocations[@i].TaskName" class="form-control" required>
                            <option value="">-- Select Task --</option>
                            @foreach (var taskType in ViewBag.TaskTypes as SelectList)
                            {
                                <option value="@taskType.Text" selected="@(taskType.Text == Model.Allocations[i].TaskName ? "selected" : null)">@taskType.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label>&nbsp;</label><br/>
                        <button type="button" class="btn btn-danger btn-sm" onclick="removeAllocation(@i)">Remove</button>
                    </div>
                </div>
                <input type="hidden" name="Allocations[@i].Id" value="@Model.Allocations[i].Id" />
                <input type="hidden" name="Allocations[@i].SortOrder" value="@i" />
            </div>
        }
    </div>

    <button type="button" class="btn btn-secondary" onclick="addAllocation()">+ Add Staff</button>

    <div style="margin-top: 20px;">
        <button type="submit" class="btn btn-primary">Update Template</button>
        <a href="@Url.Action("Templates")" class="btn btn-secondary">Cancel</a>
    </div>
</form>

<script>
    let allocationIndex = @Model.Allocations.Count;
    
    function addAllocation() {
        const container = document.getElementById('allocations-container');
        const index = allocationIndex++;
        
        const html = `
            <div class="allocation-row" id="allocation-${index}" style="border: 1px solid #ddd; padding: 15px; margin-bottom: 10px; border-radius: 4px; background-color: #f9f9f9;">
                <div class="row">
                    <div class="col-md-5">
                        <label>Staff Member:</label>
                        <select name="Allocations[${index}].StaffId" class="form-control" required>
                            <option value="">-- Select Staff --</option>
                            @foreach (var item in ViewBag.Staffs as SelectList)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-5">
                        <label>Task Name:</label>
                        <select name="Allocations[${index}].TaskName" class="form-control" required>
                            <option value="">-- Select Task --</option>
                            @foreach (var taskType in ViewBag.TaskTypes as SelectList)
                            {
                                <option value="@taskType.Text">@taskType.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label>&nbsp;</label><br/>
                        <button type="button" class="btn btn-danger btn-sm" onclick="removeAllocation(${index})">Remove</button>
                    </div>
                </div>
                <input type="hidden" name="Allocations[${index}].SortOrder" value="${index}" />
            </div>
        `;
        
        container.insertAdjacentHTML('beforeend', html);
    }
    
    function removeAllocation(index) {
        const element = document.getElementById(`allocation-${index}`);
        if (element) {
            element.remove();
        }
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .form-group {
        margin-bottom: 20px;
    }
    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ced4da;
        border-radius: 4px;
    }
    .row {
        display: flex;
        gap: 10px;
    }
    .col-md-5 {
        flex: 0 0 41.666667%;
    }
    .col-md-2 {
        flex: 0 0 16.666667%;
    }
    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }
    .btn {
        padding: 8px 16px;
        border-radius: 4px;
        border: none;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        margin-right: 5px;
    }
    .btn-primary {
        background-color: #007bff;
        color: white;
    }
    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }
    .btn-danger {
        background-color: #dc3545;
        color: white;
    }
    .btn-sm {
        padding: 4px 8px;
        font-size: 0.875rem;
    }
    .text-danger {
        color: #dc3545;
        font-size: 0.875rem;
    }
</style>
