@model CalendarMonthVM
@{
    ViewData["Title"] = "Task Schedule Calendar";
}

@Html.Raw(TempData["Info"])

<div style="margin-bottom: 20px; display: flex; justify-content: space-between; align-items: center; gap: 20px; flex-wrap: wrap;">
    <!-- Month/Year Selector -->
    <form method="get" asp-action="Calendar" style="display: flex; gap: 10px; align-items: center;">
        <label style="font-weight: bold;">Select Month/Year:</label>
        <select name="month" style="padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
            @{
                var months = new[] {
                    (1, "January"), (2, "February"), (3, "March"), (4, "April"),
                    (5, "May"), (6, "June"), (7, "July"), (8, "August"),
                    (9, "September"), (10, "October"), (11, "November"), (12, "December")
                };
            }
            @foreach (var (value, name) in months)
            {
                if (Model.Month == value)
                {
                    <option value="@value" selected>@name</option>
                }
                else
                {
                    <option value="@value">@name</option>
                }
            }
        </select>
        <select name="year" style="padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
            @for (int y = DateTime.Now.Year - 2; y <= DateTime.Now.Year + 2; y++)
            {
                if (Model.Year == y)
                {
                    <option value="@y" selected>@y</option>
                }
                else
                {
                    <option value="@y">@y</option>
                }
            }
        </select>
        <button type="submit" class="btn btn-primary">Go</button>
    </form>

    <!-- Templates Link -->
    <div>
        <a href="@Url.Action("Templates")" class="btn btn-primary">Manage Templates</a>
    </div>
</div>

<div style="margin-bottom: 10px;">
    <strong style="font-size: 1.2em; color: #333;">Viewing: @Model.MonthName @Model.Year</strong>
</div>

<div class="legend" style="margin-bottom: 15px; padding: 10px; background-color: #f8f9fa; border-radius: 4px;">
    <strong>Legend:</strong>
    <span class="legend-item"><span class="status-empty">⬜</span> No Schedule</span>
    <span class="legend-item"><span class="status-ok">✓</span> All Staff Available</span>
    <span class="legend-item"><span class="status-warning">!</span> Staff Unavailable</span>
    <span class="legend-item"><span class="status-acknowledged">*</span> Unavailable (Acknowledged)</span>
</div>

<div class="calendar-grid">
    <div class="calendar-header-row">
        @foreach (var dayHeader in Model.DayHeaders)
        {
            <div class="calendar-header">@dayHeader</div>
        }
    </div>
    
    @for (int i = 0; i < Model.Days.Count; i += 7)
    {
        <div class="calendar-row">
            @for (int j = 0; j < 7 && i + j < Model.Days.Count; j++)
            {
                var day = Model.Days[i + j];
                var cssClass = "calendar-day";
                if (!day.IsCurrentMonth) cssClass += " other-month";
                if (day.HasSchedule) cssClass += " has-schedule";
                
                <div class="@cssClass" onclick="handleDayClick('@day.Date.ToString("yyyy-MM-dd")', @day.HasSchedule.ToString().ToLower())">
                    <div class="day-number">@day.DayNumber</div>
                    @if (day.HasSchedule)
                    {
                        <div class="template-name">@day.TemplateName</div>
                        <div class="status-indicator status-@day.Status.ToLower()">
                            @if (day.Status == "OK")
                            {
                                <text>✓</text>
                            }
                            else if (day.Status == "WARNING")
                            {
                                <text>!</text>
                            }
                            else if (day.Status == "ACKNOWLEDGED")
                            {
                                <text>*</text>
                            }
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>

<script>
    function handleDayClick(dateStr, hasSchedule) {
        // Always go to Day Management first (with tabs for Attendance List + Schedule Details)
        window.location.href = '@Url.Action("DayManagement")?dateStr=' + dateStr;
    }
</script>
