@model Checkout
@{
    ViewBag.Title = "Create Order";
    var workflow = (string[])ViewBag.Workflow ?? new string[] { "PENDING","PICKING","PACKED","READY","COMPLETED","CANCELLED" };
}

<h2>Create Order</h2>

<form method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <!-- Id is auto-generated -->
    <div>
        <label>CustomerId (digits only)</label>
        <input name="CustomerId" pattern="\d+" title="Numbers only" required />
    </div>
    <div>
        <label>InventoryId (digits only)</label>
        <input name="InventoryId" pattern="\d+" title="Numbers only" required />
    </div>
    <div>
        <label>Total</label>
        <input name="Total" type="number" step="0.01" required />
    </div>
    <div>
        <label>Status</label>
        <select name="Status">
            @foreach(var s in workflow) { <option value="@s">@s</option> }
        </select>
    </div>

    <button type="submit">Create</button>
</form>
