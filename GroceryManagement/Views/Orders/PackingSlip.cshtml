@model Checkout
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Packing Slip - @Model.Id</title>
    <style>
        body { font-family: Arial, Helvetica, sans-serif; }
        .container { width: 700px; margin: 0 auto; }
        .header { text-align: center; }
        .items { margin-top: 20px; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Packing Slip</h1>
            <p>Order: @Model.Id</p>
            <p>Date: @Model.Date</p>
        </div>
        <div class="items">
            <p>Inventory Batch: @Model.InventoryId</p>
            <p>Total: @Model.Total</p>
        </div>
    </div>
    <script>
        window.print();
    </script>
</body>
</html>
