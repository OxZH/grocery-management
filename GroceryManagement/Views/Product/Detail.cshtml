@model Product

@{
    ViewBag.Title = "Product | Details";
}

<div class="detail-container">
    <div class="left-panel">
        <table class="table">
            <tr>
                <th>Photo</th>
                <td>
                    <img src="/images/productImg/@Model.PhotoURL" style="width: 200px; height: 200px; object-fit: cover; border: 1px solid #333;" alt="@Model.Name">
                </td>
            </tr>
            <tr>
                <th>ID</th>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>SellPrice (RM)</th>
                <td>@Model.SellPrice.ToString("")</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>@Model.Category</td>
            </tr>
            <tr>
                <th>Warehouse Qty</th>
                <td>@Model.WareHouseQty</td>
            </tr>
            <tr>
                <th>Store Front Qty</th>
                <td>@Model.StoreFrontQty</td>
            </tr>
        </table>

        <section class="actions" style="margin-top: 20px;">
            <button data-get="/Product/Update/@Model.Id">Edit</button>
            <button data-post="/Product/Delete/@Model.Id"
                    data-confirm="Are you sure you want to delete Product @Model.Id?">
                Delete
            </button>
            <a href="/Product/Index" class="button">Back to List</a>
        </section>
    </div>
</div>