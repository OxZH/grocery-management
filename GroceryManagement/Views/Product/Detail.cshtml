@model Product

@{
    ViewBag.Title = "Product | Details";
}

<h1>Product Details</h1>

<style>
    /* Simple styling for the detail table */
    .detail-table {
        width: 100%;
        max-width: 600px;
        border-collapse: collapse;
    }

        .detail-table th {
            text-align: left;
            padding: 10px;
            width: 150px;
            background-color: #f2f2f2;
        }

        .detail-table td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

    .detail-photo {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
</style>

<table class="detail-table">
    <tr>
        <th>Photo</th>
        <td>
            <img src="/images/@Model.PhotoURL" class="detail-photo" alt="@Model.Name">
        </td>
    </tr>
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>SellPrice</th>
        <td>@Model.SellPrice</td>
    </tr>
    <tr>
        <th>Category</th>
        <td>@Model.Category</td>
    </tr>
    <tr>
        <th>Warehouse Qty</th>
        <td>@Model.WareHouseQty</td>
    </tr>
    <tr>
        <th>Store Front Qty</th>
        <td>@Model.StoreFrontQty</td>
    </tr>
</table>

<div style="margin-top: 20px;">
    <a asp-action="Index" class="button">Back to List</a> |
    <a asp-action="Update" asp-route-id="@Model.Id" class="button">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.Id" class="button">Delete</a>
</div>