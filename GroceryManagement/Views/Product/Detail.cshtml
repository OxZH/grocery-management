@model Product

@{
    ViewBag.Title = "Product | Details";
}

<h1>Product Details</h1>

<table class="detail-container">
    <tr>
        <th>Photo</th>
        <td>
            <img src="/images/@Model.PhotoURL" class="detail-photo" alt="@Model.Name">
        </td>
    </tr>
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>SellPrice</th>
        <td>@Model.SellPrice</td>
    </tr>
    <tr>
        <th>Category</th>
        <td>@Model.Category</td>
    </tr>
    <tr>
        <th>Warehouse Qty</th>
        <td>@Model.WareHouseQty</td>
    </tr>
    <tr>
        <th>Store Front Qty</th>
        <td>@Model.StoreFrontQty</td>
    </tr>
</table>
<section class="actions" style="margin-top: 20px;">
    <button data-get="/Product/Update/@Model.Id">Edit</button>
    <button data-post="/Product/Delete/@Model.Id"
            data-confirm="Are you sure you want to delete Product @Model.Id?">
        Delete
    </button>
    <a href="/Product/Index" class="button">Back to List</a>
</section>