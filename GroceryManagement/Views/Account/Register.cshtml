@model RegisterVM

@{
    ViewBag.Title = "Register New Staff";
}

<form class="form" method="post" enctype="multipart/form-data">
        <section>
            <h1>Register New Staff</h1>
        </section>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <label asp-for="Name"></label>
        <input asp-for="Name" data-trim autofocus />
        <span asp-validation-for="Name"></span>

        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" data-trim />
        <span asp-validation-for="Email"></span>

        <label asp-for="PhoneNum"></label>
        <input asp-for="PhoneNum" data-trim />
        <span asp-validation-for="PhoneNum"></span>

        <label asp-for="Salary"></label>
        <input asp-for="Salary" type="number" step="0.01" min="0" />
        <span asp-validation-for="Salary"></span>

        <label asp-for="AuthorizationLvl">Role</label>
        <select asp-for="AuthorizationLvl">
            <option value="">-- Select Role --</option>
            <option value="CASHIER">Cashier</option>
            <option value="INVENTORY">Inventory</option>
            <option value="CLEANING">Cleaning</option>
        </select>
        <span asp-validation-for="AuthorizationLvl"></span>

        <label asp-for="Password"></label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>

        <label asp-for="Confirm"></label>
        <input asp-for="Confirm" />
        <span asp-validation-for="Confirm"></span>

        <label asp-for="Photo"></label>
        <label class="upload">
            <input asp-for="Photo" type="file" accept="image/jpeg,image/png" hidden />
            <img src="/images/default.png" alt="Photo Preview" />
        </label>
        <span asp-validation-for="Photo"></span>

        <section>
            <button class="btn btn-primary" formnovalidate>Register</button>
            <button type="reset" class="btn btn-secondary">Reset</button>
            <a href="/" class="btn btn-link">Back</a>
        </section>
</form>

@section foot {
 <script>

       $.validator.setDefaults({ ignore: '' });
 </script>
