@model RegisterVM

@{
    ViewBag.Title = "Register User";
}

<form method="post" enctype="multipart/form-data">
    <div class="form">
        <section><h1>Register New User</h1></section>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <label asp-for="Role">Account Type</label>
        <select asp-for="Role" id="RoleSelect">
            <option value="Staff">Staff</option>
            <option value="Manager">Manager</option>
        </select>
        <span></span>

        <label asp-for="Name"></label>
        <input asp-for="Name" data-trim autofocus />
        <span asp-validation-for="Name"></span>

        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" data-trim />
        <span asp-validation-for="Email"></span>

        <label asp-for="PhoneNum"></label>
        <input asp-for="PhoneNum" data-trim />
        <span asp-validation-for="PhoneNum"></span>

        <label asp-for="Password"></label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>

        <label asp-for="Confirm"></label>
        <input asp-for="Confirm" />
        <span asp-validation-for="Confirm"></span>

        <div id="staff-fields" style="display: contents;">
            <label asp-for="AuthorizationLvl">Job Role</label>
            <select asp-for="AuthorizationLvl" id="JobRoleSelect">
                <option value="">-- Select Role --</option>
                <option value="CASHIER">Cashier</option>
                <option value="INVENTORY">Inventory</option>
                <option value="CLEANING">Cleaning</option>
            </select>
            <span asp-validation-for="AuthorizationLvl"></span>

            <label asp-for="Salary">Salary (RM/hr)</label>
            <input asp-for="Salary" id="SalaryInput" type="number" step="0.01" />
            <span asp-validation-for="Salary"></span>

            <label asp-for="Photo"></label>
            <label class="upload">
                <input asp-for="Photo" type="file" accept="image/jpeg,image/png" hidden />
                <img src="/images/default.png" alt="Photo Preview" />
            </label>
            <span asp-validation-for="Photo"></span>
        </div>

        <section>
            <button class="btn btn-primary">Register</button>
            <button type="reset" class="btn btn-secondary">Reset</button>
            <a href="javascript:history.back()" class="btn btn-link">Back</a>
        </section>
    </div>
</form>

@section foot {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {

            // 1. Logic to toggle fields based on Account Type (Manager/Staff)
            $('#RoleSelect').change(function() {
                if ($(this).val() === 'Manager') {
                    $('#staff-fields').hide(); // Hide staff inputs
                    // Clear values so they don't submit garbage
                    $('#staff-fields input, #staff-fields select').val('');
                } else {
                    $('#staff-fields').show();
                    $('#staff-fields').css('display', 'contents'); // Restore Grid layout
                }
            });

            // 2. Logic to Auto-Fill Salary based on Job Role
            $('#JobRoleSelect').change(function() {
                var role = $(this).val();
                var salaryBox = $('#SalaryInput');

                if (role === 'CASHIER') {
                    salaryBox.val('10.00');
                }
                else if (role === 'INVENTORY') {
                    salaryBox.val('12.00');
                }
                else if (role === 'CLEANING') {
                    salaryBox.val('9.00');
                }
                // Clear if they select "-- Select Role --"
                else if (role === "") {
                    salaryBox.val('');
                }
            });

            // Trigger change on load just in case browser cached the selection (optional)
            $('#RoleSelect').trigger('change');
        });
    </script>
}