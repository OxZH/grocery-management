@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<Inventory>

@{
    ViewBag.Title = "Home | Inventory";
    // Define the fields available for sorting and display
    string[] fields = ["Id", "ExpiryDate", "ProductId", "Status", "SupplierId"];

    // Local function to generate sort links
    string GetSortUrl(string col)
    {
        string dir = "asc";
        if (col == ViewBag.Sort)
        {
            dir = ViewBag.Dir == "des" ? "asc" : "des";
        }
        else
        {
            dir = "asc";
        }
        return Url.Action("Index", new { name = ViewBag.Name, sort = col, dir = dir });
    }

    // Helper to render the sort icon
    string GetSortIcon(string col)
    {
        if (col == ViewBag.Sort)
        {
            return ViewBag.Dir == "asc" ? " ▲" : " ▼";
        }
        return "";
    }
}

@* SEARCH FORM *@
<form method="get">
    @Html.TextBox("name", (string)ViewBag.Name,
    new { type = "search", autofocus = "", placeholder = "Search by Product ID...", data_trim = "" })
    @Html.Hidden("sort")
    @Html.Hidden("dir")
    <button>Search</button>
    <a href="/Home/Index" class="button">Clear Search</a>
</form>

<p>
    @Model.Count() of @Model.TotalItemCount record(s) |
    Page @Model.PageNumber of @Model.PageCount
</p>

<table class="table">
    <tr>
        <td><button data-get="/Home/Insert">Insert</button></td>
    </tr>
    <tr>
        @* SORTABLE HEADERS *@
        @foreach (var f in fields)
        {
            string d = "asc";
            string c = "";

            if (f == ViewBag.Sort)
            {
                d = ViewBag.Dir == "des" ? "asc" : "des";
                c = ViewBag.Dir;
            }

            <th>
                <a href="?name=@ViewBag.Name&sort=@f&dir=@d" class="@c">@f</a>
            </th>
        }
        <th>Actions</th>
    </tr>

    @* DATA ROWS *@
    @foreach (var s in Model)
    {
        <tr>
            <td><a href="/Home/Detail/@s.Id">@s.Id</a></td>
            <td>@s.ExpiryDate</td>
            <td>@s.ProductId</td>
            <td>@s.Status</td>
            <td>@s.SupplierId</td>
            <td>
                <button data-get="/Home/Detail/@s.Id">Detail</button>
                <button data-get="/Home/Update/@s.Id">Update</button>
                <button data-post="/Home/Delete/@s.Id">Delete</button>
            </td>
        </tr>
    }
</table>

@* PAGINATION LINKS *@
@{
    var options = PagedListRenderOptions.ClassicPlusFirstAndLast;
    options.LinkToFirstPageFormat = "First";
    options.LinkToLastPageFormat = "Last";
    options.LinkToPreviousPageFormat = "Previous";
    options.LinkToNextPageFormat = "Next";
}

@Html.PagedListPager(
Model,
page => $"?name={ViewBag.Name}&sort={ViewBag.Sort}&dir={ViewBag.Dir}&page={page}",
options
)