@model InventoryInsertVM

@{
    ViewBag.Title = "Home | Insert";
    string min = DateTime.Today.AddDays(0).ToString("yyyy-MM-dd");
}

<form method="post" class="form">
    <div asp-validation-summary="ModelOnly"></div>

    <label asp-for="ProductId">Product</label>
    <select asp-for="ProductId" asp-items="ViewBag.ProductList" class="form-control" id="ProductSearch" style="text-transform: uppercase" autofocus>
        <option value="">- Select Product -</option>
    </select>
    <span asp-validation-for="ProductId" class="text-danger"></span>

    <label asp-for="ExpiryDate"></label>
    <div>
        <input asp-for="ExpiryDate" min="@min">
    </div>
    <span asp-validation-for="ExpiryDate"></span>

    <label asp-for="SupplierId">Supplier</label>
    <select asp-for="SupplierId" asp-items="ViewBag.SupplierList" class="form-control" id="SupplierSearch" style="text-transform: uppercase">
        <option value="">- Select Supplier -</option>
    </select>
    <span asp-validation-for="SupplierId" class="text-danger"></span>

    <label asp-for="Qty">Qty</label>
    <input asp-for="Qty" type="number">
    <span asp-validation-for="Qty"></span>
    

    <section>
        <button>Submit</button>
        <button type="reset">Reset</button>
    </section>
</form>
