@model List<GroceryManagement.Models.LeaveRequest>
@{
    ViewBag.Title = "Leave Approvals";
    var info = TempData["Info"] as string;
    var managerId = ViewBag.ManagerId as string ?? "";
}

<h2>Leave Approvals</h2>

<p><strong>Manager ID:</strong> @managerId</p>

@if (!string.IsNullOrWhiteSpace(info))
{
    <div class="alert">@Html.Raw(info)</div>
}

@if (Model is null || !Model.Any())
{
    <p>No leave requests found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Staff</th>
                <th>Date</th>
                <th>Type</th>
                <th>Status</th>
                <th>Submitted</th>
                <th>Approved By</th>
                <th>Attachment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.StaffId</td>
                <td>@r.LeaveDate</td>
                <td>@r.Type</td>
                <td>@r.Status</td>
                <td>@r.SubmittedAt</td>
                <td>@(string.IsNullOrWhiteSpace(r.ApprovedBy) ? "-" : r.ApprovedBy)</td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(r.AttachmentPath))
                    {
                        <a href="@r.AttachmentPath" target="_blank">View</a>
                    }
                    else
                    {
                        <span>-</span>
                    }
                </td>
                <td>
                    @if (r.Status == "PENDING")
                    {
                        <form asp-action="ApproveLeave" method="post" style="display:inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@r.Id" />
                            <button type="submit">Approve</button>
                        </form>
                        <form asp-action="RejectLeave" method="post" style="display:inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@r.Id" />
                            <button type="submit">Reject</button>
                        </form>
                    }
                    else
                    {
                        <span>Already @r.Status</span>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}
